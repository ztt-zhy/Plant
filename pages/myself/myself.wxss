/* 头部 */
.z-header {
  width: 100%;
  height: 150rpx;
  background-color: #5d655f;
  display: flex;
  /* background: -webkit-linear-gradient(yellow, #5d655f); */
  /* Safari 5.1 - 6.0 */

  background: -o-linear-gradient(yellow, green)
}

/* 頭像 */
.header-img {
  padding-left: 20rpx;
}

.z-header image {
  border-radius: 50%;
  width: 130rpx;
  height: 130rpx;
}

/* 用戶信息 */
.xin {
  width: 400rpx;
  color: white;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  font-size: 28rpx;
}

.xin text {
  padding-bottom: 10rpx;
  padding-left: 20rpx;
}

/* 充值 */
.money {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  font-size: 26rpx;
}

/* 小盒子 */
.moneys {
  width: 25%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

/* 分割线 */
.xian {
  width: 100%;
  height: 15rpx;
  background-color: rgb(235, 230, 230);
}