/* 搜索框 */


/* 侧边导航栏 */
.productNav {
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei"
}


/* 左侧 */
/* 1. 设置整个页面的背景颜色 */
page {
  background: #fff;
  /* 避免左侧Item不够时 被白色覆盖*/
  position: relative;
}

/* 2.主盒子 */
.container {
  width: 100%;
  /* 宽度占屏幕的100% */
  height: 100%;
  /* 高度占屏幕的100% */
  background-color: #fff;
  /* 背景颜色 */
}

/* 3.左盒子*/
/* 3.1. 左侧栏主盒子总体设置 */
.nav_left {
  position: absolute;
  /* 使用绝对定位 */
  top: 54px;
  /* 距离上边距：0px */
  left: 0px;
  /* 距离左边距：0px */
  width: 25%;
  /* 每个item所占的宽度 */
  background: #f5f5f5;
  /* 主盒子设置背景色为灰色 */
  text-align: center;
  /* 文字居中显示 */
}

/* 3.2. 左侧栏的每个item */
.nav_left .nav_left_items {
  height: 80rpx;
  /* 每个item高40px*/
  padding: 12rpx 0;
  /* 上内边距和下内边距是 6px[增加高度] 右内边距和左内边距是 0px*/
  border-bottom: 2rpx solid #dedede;
  /* 设置下边线 */
  font-size: 28rpx;
  /* 设置文字大小：14px */
  text-align: center;
  line-height: 80rpx;
}

/* 3.3. 左侧栏list的item被选中时*/
.nav_left .nav_left_items.active {
  background: #fff;
  /* 背景色变成白色 */
  color: red;
  /* 字体编程蓝色 */
  border-left: 3px solid red;
  /* 设置边框的宽度以及颜色 */
}

/* 4.右盒子 */
/* 4.1. 右侧栏主盒子总体设置 */
.nav_right {
  position: absolute;
  /* 使用绝对定位 */
  top: 54px;
  /* 距离上边距：0px */
  right: 0;
  /* 距离左边距：80px */
  width: 75%;
  /* 右侧主盒子所占宽度 */
  height: 100%;
  /* 右侧主盒子所占高度 */
  padding: 10px;
  /* 所有 4 个内边距都是 10px*/
  box-sizing: border-box;
  /* 为元素指定的任何内边距和边框都将在已设定的宽度和高度内进行绘制*/
  background: #fff;
  /* 右侧主盒子背景颜色 */
}

/* 4.2. 右侧栏中的每个item */
.nav_right .nav_right_items {
  width: 100%;
  display: flex;
}

.nav_right .nav_right_items .left {
  padding: 0 20rpx;
}

.nav_right .nav_right_items .left image {
  width: 160rpx;
  height: 160rpx;
}

.nav_right .nav_right_items .right {
  width: 100%;
}

.nav_right .nav_right_items .right view:nth-child(1) {
  color: #323233;
  font-size: 32rpx;
  font-weight: 700;
}

.nav_right .nav_right_items .right view:nth-child(2) {
  font-size: 26rpx;
  color: #646566;
  margin-top: 10rpx;
}

.nav_right .nav_right_items .right .xia {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.nav_right .nav_right_items .right .xia text {
  font-size: 30rpx;
  color: #ee0
}

.left {
  width: 25%;
  font-size: 30rpx;
  background-color: #f4f4f4;
}

.left view {
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}

.selected {
  background-color: #fff;
  border-left: 2px solid #E54847;
  font-weight: bold;
  color: #E54847;
}

.normal {
  background-color: #f4f4f4;
  border-bottom: 1px solid #f2f2f2;
}

/* 右侧 */
.right {
  width: 75%;
  margin: 0;
}

/* 图片区域 */
.pic image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 25rpx;
}

